<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:context="http://www.springframework.org/schema/context"
	   xmlns:aop="http://www.springframework.org/schema/aop"
	   xmlns:mvc="http://www.springframework.org/schema/mvc"
	   xsi:schemaLocation="
        http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans-4.2.xsd
        http://www.springframework.org/schema/context
        http://www.springframework.org/schema/context/spring-context-4.2.xsd
     	http://www.springframework.org/schema/aop
     	http://www.springframework.org/schema/aop/spring-aop-4.2.xsd
		http://www.springframework.org/schema/mvc
     	http://www.springframework.org/schema/mvc/spring-mvc-4.2.xsd">

	<context:component-scan base-package="com.sqlm.web.controller"/>
	<context:annotation-config />
	<aop:aspectj-autoproxy proxy-target-class="true" />
	<mvc:annotation-driven/>

	<!-- 静态资源访问 -->
	<!--<mvc:resources location="/WEB-INF/web/page/images/" mapping="/WEB-INF/web/page/images/**"/>
	<mvc:resources location="/WEB-INF/web/page/css/" mapping="/WEB-INF/web/page/css/**"/>
	<mvc:resources location="/WEB-INF/web/js/" mapping="/WEB-INF/web/js/**"/>
	<mvc:resources location="/WEB-INF/web/css/" mapping="/WEB-INF/web/css/**"/>
	<mvc:resources location="/WEB-INF/web/lib/" mapping="/WEB-INF/web/lib/**"/>-->

	<bean class="org.springframework.web.servlet.view.InternalResourceViewResolver">
		<property name="prefix" value="/WEB-INF/web/page/" />
		<property name="suffix" value=".html" />
	</bean>

</beans>